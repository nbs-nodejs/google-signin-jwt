<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            text-align: center;
        }

        #response-display {
            margin-top: 20px;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 4px;
            white-space: pre-wrap;
            word-break: break-all;
            text-align: left;
        }

        .token-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Aligns items to the left */
            /*position: relative;*/
            margin: 20px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
        }

        .token-label {
            font-weight: bold;
            margin: 10px;
            text-align: left; /* Ensures text is left-aligned */
        }

        .token-text {
            background-color: white;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            margin-bottom: 10px;
            overflow-x: auto;
        }

        .copy-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.2s;
            font-size: 14px;
            text-align: left; /* Ensures text is left-aligned */
        }
        .copy-btn:hover {
            background-color: #218838;
        }
        .copy-btn.copied {
            background-color: #218838;
        }
        .copy-feedback {
            display: none;
            position: absolute;
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            top: 15px;
            left: 200px;
            margin-left: 10px;
        }
    </style>
</head>
<body>
<h1><%= title %></h1>
<p>Retrieve JWT returned from Google Sign-in Callback</p>

<div id="g_id_onload"
     data-client_id="<%= googleClientId %>"
     data-callback="handleCredentialResponse"
     data-auto_select="false">
</div>
<div class="g_id_signin"
     data-type="standard">
</div>

<div id="response-display"></div>

<p>Retrieve JWT returned from Google Sign-in Callback</p>

<script src="https://accounts.google.com/gsi/client" async defer></script>
<script>
    let auth2;

    async function handleCredentialResponse(response) {
        try {
            // Send the token to your server
            const serverResponse = await fetch('<%= callbackUrl %>', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    token: response.credential
                })
            });

            const data = await serverResponse.json();

            // Display the response
            document.getElementById('response-display').innerHTML = `
                    <h3>Server Response:</h3>
                    <pre>${JSON.stringify(data, null, 2)}</pre>
                `;

            // Display token with copy button
            document.getElementById('response-display').innerHTML = `
                        <div class="token-container">
                            <span class="token-label">JWT Token:</span>
                            <div class="token-text" id="token-text">${data.token}</div>
                            <button class="copy-btn" onclick="copyToken()">Copy Token</button>
                            <div class="copy-feedback">Copied!</div>
                        </div>
                        <h3>Server Response:</h3>
                        <pre>${JSON.stringify(data, null, 2)}</pre>
                    `;
        } catch (error) {
            console.error('Error:', error);
            document.getElementById('response-display').innerHTML = `
                    <h3>Error:</h3>
                    <pre>${error.message}</pre>
                `;
        }
    }

    async function copyToken() {
        const tokenText = document.getElementById('token-text').textContent;
        const copyBtn = document.querySelector('.copy-btn');
        const copyFeedback = document.querySelector('.copy-feedback');

        try {
            await navigator.clipboard.writeText(tokenText);

            // Visual feedback
            copyBtn.classList.add('copied');
            copyBtn.textContent = 'Copied!';
            copyFeedback.style.display = 'block';

            // Reset button after 2 seconds
            setTimeout(() => {
                copyBtn.classList.remove('copied');
                copyBtn.textContent = 'Copy Token';
                copyFeedback.style.display = 'none';
            }, 2000);
        } catch (err) {
            console.error('Failed to copy:', err);
            copyFeedback.textContent = 'Failed to copy';
            copyFeedback.style.display = 'block';
            setTimeout(() => {
                copyFeedback.style.display = 'none';
            }, 2000);
        }
    }
</script>
</body>
</html>